generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model Member {
  id          String  @id @default(uuid())
  memberId    String
  name        String?
  description String?
  networkId   String
  network     Network @relation(fields: [networkId], references: [networkId], onDelete: Cascade)

  @@unique([memberId, networkId])
}

model Network {
  networkId String   @id
  members   Member[]
}
